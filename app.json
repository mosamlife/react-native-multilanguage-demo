{
  "expo": {
    "name": "multi-lang-demo-app",
    "slug": "multi-lang-demo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "assetBundlePatterns": [
      "assets/fonts/*",
      "assets/**/*"
    ],

    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/PlusJakartaSans-Regular.ttf",
            "./assets/fonts/NotoSansDevanagari-Regular.ttf",
            "./assets/fonts/NotoSansGujarati-Regular.ttf",
            "./assets/fonts/NotoSansGurmukhi-Regular.ttf"
          ]
        }
      ]
    ],
  
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mosamgor.multilangdemoapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mosamgor.multilangdemoapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}

